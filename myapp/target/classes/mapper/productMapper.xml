<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="product">

	<select id="listCriteria" resultType="com.devseok0414.myapp.model.dto.ProductDTO">
		SELECT * FROM product ORDER BY no DESC
	</select>
	
	<select id="listCountCriteria" resultType="_int">
		SELECT count(*) FROM product
	</select>

	<select id="productListView" resultType="com.devseok0414.myapp.model.dto.ProductDTO">
		SELECT * FROM product WHERE no = #{no}
	</select>
	
	<select id="searchListCriteria" resultType="com.devseok0414.myapp.model.dto.ProductDTO">
		SELECT * FROM product WHERE ${searchSelect} Like '%'||#{searchText}||'%' ORDER BY no DESC
	</select>
	
	<select id="searchListCountCriteria" resultType="_int">
		SELECT count(*) FROM product WHERE ${searchSelect} Like '%'||#{searchText}||'%'
	</select>

</mapper>